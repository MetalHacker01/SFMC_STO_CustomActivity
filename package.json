{
  "name": "sfmc-send-time-optimization",
  "version": "1.0.0",
  "description": "SFMC Custom Journey Activity for Send Time Optimization based on geographic segments",
  "main": "server.js",
  "scripts": {
    "start": "node server-working.js",
    "start:prod": "node server-production.js",
    "dev": "nodemon server-working.js",
    "test": "jest --setupFilesAfterEnv=./tests/setup.js",
    "test:watch": "jest --watch --setupFilesAfterEnv=./tests/setup.js",
    "test:coverage": "jest --coverage --setupFilesAfterEnv=./tests/setup.js",
    "build": "npm ci --only=production",
    "docker:build": "docker build -t sto-activity:latest .",
    "docker:run": "docker-compose -f docker-compose.production.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f sto-activity",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "lint": "eslint src/ server.js server-production.js",
    "lint:fix": "eslint src/ server.js server-production.js --fix"
  },
  "keywords": [
    "salesforce",
    "marketing-cloud",
    "journey-builder",
    "custom-activity",
    "send-time-optimization",
    "timezone"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.43",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}